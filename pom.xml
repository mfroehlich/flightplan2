				<type>ejb</type>
			</dependency>
			<dependency>
				<groupId>com.prodyna.pac.flightplan</groupId>
				<artifactId>monitoring</artifactId>
				<version>${project.version}</version>
				<type>ejb</type>
			</dependency>
			<dependency>
				<groupId>com.prodyna.pac.flightplan.pilot</groupId>
				<artifactId>pilot-client</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>com.prodyna.pac.flightplan.pilot</groupId>
				<artifactId>pilot-service</artifactId>
				<version>${project.version}</version>
				<type>ejb</type>
			</dependency>
			<dependency>
				<groupId>com.prodyna.pac.flightplan.plane</groupId>
				<artifactId>plane-client</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>com.prodyna.pac.flightplan.plane</groupId>
				<artifactId>plane-service</artifactId>
				<version>${project.version}</version>
				<type>ejb</type>
			</dependency>
			<dependency>
				<groupId>com.prodyna.pac.flightplan.flightplan-common</groupId>
				<artifactId>flightplan-common-client</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>com.prodyna.pac.flightplan</groupId>
				<artifactId>common-utils</artifactId>
				<version>01.00.00-SNAPSHOT</version>
			</dependency>
			<dependency>
				<groupId>com.prodyna.pac.flightplan.planereservation</groupId>
				<artifactId>planereservation-client</artifactId>
				<version>01.00.00-SNAPSHOT</version>
			</dependency>
			<dependency>
				<groupId>com.prodyna.pac.flightplan.planereservation</groupId>
				<artifactId>planereservation-service</artifactId>
				<version>01.00.00-SNAPSHOT</version>
				<type>ejb</type>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.1</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<modules>
		<module>common-utils</module>
		<module>flightplan-common</module>
		<module>user</module>
		<module>pilot</module>
		<module>plane</module>
		<module>reservation</module>
		<module>planereservation</module>
		<module>flightplan-war</module>
		<module>flightplan-ear</module>
		<module>monitoring</module>
		<module>flightplan-frontend</module>
		<module>flightplan-resttest</module>
	</modules>
</project>